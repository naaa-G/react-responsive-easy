{
  "name": "@yaseratiar/react-responsive-easy",
  "version": "1.0.0",
  "private": false,
  "description": "Revolutionary responsive development for React",
  "keywords": [
    "react",
    "responsive",
    "css",
    "ui",
    "scaling"
  ],
  "author": "naa-G",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "tools/*",
    "configs/*"
  ],
  "scripts": {
    "build": "pnpm --filter=@yaseratiar/react-responsive-easy-core build && pnpm --filter=@yaseratiar/react-responsive-easy-ai-optimizer build && pnpm --filter=@yaseratiar/react-responsive-easy-performance-dashboard build && pnpm --filter=@yaseratiar/react-responsive-easy-babel-plugin build && pnpm --filter=@yaseratiar/react-responsive-easy-cli build && pnpm --filter=@yaseratiar/react-responsive-easy-postcss-plugin build && pnpm --filter=@yaseratiar/react-responsive-easy-storybook-addon build && pnpm --filter=@yaseratiar/react-responsive-easy-vite-plugin build && pnpm --filter=@yaseratiar/react-responsive-easy-next-plugin build",
    "test": "node scripts/test-runner.js",
    "test:parallel": "pnpm --filter=./packages/* test",
    "test:sequential": "pnpm run test:core && pnpm run test:ai-optimizer && pnpm run test:performance-dashboard && pnpm run test:babel-plugin && pnpm run test:cli && pnpm run test:postcss-plugin && pnpm run test:storybook-addon && pnpm run test:vite-plugin && pnpm run test:next-plugin",
    "test:core": "pnpm --filter=@yaseratiar/react-responsive-easy-core test",
    "test:ai-optimizer": "pnpm --filter=@yaseratiar/react-responsive-easy-ai-optimizer test",
    "test:performance-dashboard": "pnpm --filter=@yaseratiar/react-responsive-easy-performance-dashboard test",
    "test:babel-plugin": "pnpm --filter=@yaseratiar/react-responsive-easy-babel-plugin test",
    "test:cli": "pnpm --filter=@yaseratiar/react-responsive-easy-cli test",
    "test:postcss-plugin": "pnpm --filter=@yaseratiar/react-responsive-easy-postcss-plugin test",
    "test:storybook-addon": "pnpm --filter=@yaseratiar/react-responsive-easy-storybook-addon test",
    "test:vite-plugin": "pnpm --filter=@yaseratiar/react-responsive-easy-vite-plugin test",
    "test:next-plugin": "pnpm --filter=@yaseratiar/react-responsive-easy-next-plugin test",
    "test:coverage": "pnpm --filter=./packages/* test:coverage",
    "collect-errors": "node tools/enhanced-error-collector.js",
    "collect-errors:legacy": "node tools/error-collector.js",
    "collect-errors:ci": "node tools/error-collector.js --skip-e2e",
    "collect-errors:full": "node tools/error-collector.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "test:performance": "playwright test tests/e2e/performance.spec.ts",
    "lint": "pnpm --filter=./packages/* lint",
    "dev": "pnpm --filter=./packages/* --parallel dev",
    "type-check": "pnpm --filter=@yaseratiar/react-responsive-easy-core --filter=@yaseratiar/react-responsive-easy-ai-optimizer --filter=@yaseratiar/react-responsive-easy-babel-plugin --filter=@yaseratiar/react-responsive-easy-cli --filter=@yaseratiar/react-responsive-easy-performance-dashboard --filter=@yaseratiar/react-responsive-easy-postcss-plugin --filter=@yaseratiar/react-responsive-easy-storybook-addon --filter=@yaseratiar/react-responsive-easy-vite-plugin --filter=@yaseratiar/react-responsive-easy-next-plugin type-check",
    "type-check:extensions": "pnpm --filter=@yaseratiar/react-responsive-easy-browser-extension --filter=@yaseratiar/react-responsive-easy-figma-plugin type-check",
    "type-check:all": "pnpm type-check && pnpm type-check:extensions && pnpm --filter=@react-responsive-easy/docs type-check",
    "clean": "pnpm --filter=./packages/* clean"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
