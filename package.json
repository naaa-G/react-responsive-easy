{
  "name": "react-responsive-easy",
  "version": "0.0.1",
  "private": true,
  "description": "Revolutionary responsive development for React",
  "keywords": [
    "react",
    "responsive",
    "css",
    "ui",
    "scaling"
  ],
  "author": "naa-G",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*",
    "configs/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "test:performance": "playwright test tests/e2e/performance.spec.ts",
    "lint": "pnpm -r lint",
    "dev": "pnpm -r --parallel dev",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
