{
  "name": "@yaseratiar/react-responsive-easy-next-plugin",
  "version": "1.0.1",
  "description": "Next.js plugin for React Responsive Easy integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:legacy": "tsc",
    "dev": "tsc --noEmit --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rimraf dist"
  },
  "keywords": [
    "nextjs",
    "next-plugin",
    "responsive",
    "react",
    "ssr",
    "build-time",
    "optimization",
    "webpack",
    "babel"
  ],
  "author": "naa-G",
  "license": "MIT",
  "dependencies": {
    "@yaseratiar/react-responsive-easy-babel-plugin": "workspace:*",
    "@yaseratiar/react-responsive-easy-postcss-plugin": "workspace:*",
    "@yaseratiar/react-responsive-easy-core": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "next": "^14.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naaa-G/react-responsive-easy.git",
    "directory": "packages/next-plugin"
  },
  "bugs": {
    "url": "https://github.com/naaa-G/react-responsive-easy/issues"
  },
  "homepage": "https://github.com/naaa-G/react-responsive-easy#readme"
}
