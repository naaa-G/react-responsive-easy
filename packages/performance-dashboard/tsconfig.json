{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitThis": false,
    "noImplicitOverride": false,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "dist",
    "dashboard-dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}
