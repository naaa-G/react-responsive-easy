{
  "name": "@yaseratiar/react-responsive-easy-postcss-plugin",
  "version": "1.0.1",
  "description": "PostCSS plugin for React Responsive Easy CSS processing",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:unit": "vitest --grep \"Unit Tests\"",
    "test:integration": "vitest --grep \"Integration Tests\"",
    "test:performance": "vitest --grep \"Performance Tests\"",
    "test:stress": "vitest --grep \"Stress Tests\"",
    "test:ci-cd": "vitest --grep \"CI/CD\"",
    "test:snapshot": "vitest --grep \"Snapshot Tests\"",
    "test:error": "vitest --grep \"Error Handling\"",
    "test:coverage": "vitest --coverage",
    "test:debug": "DEBUG_TESTS=true vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rimraf dist"
  },
  "keywords": [
    "postcss",
    "postcss-plugin",
    "responsive",
    "css",
    "react",
    "build-time",
    "custom-media",
    "css-variables"
  ],
  "author": "naa-G",
  "license": "MIT",
  "dependencies": {
    "@yaseratiar/react-responsive-easy-core": "workspace:*",
    "postcss": "^8.4.0",
    "postcss-value-parser": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naaa-G/react-responsive-easy.git",
    "directory": "packages/postcss-plugin"
  },
  "bugs": {
    "url": "https://github.com/naaa-G/react-responsive-easy/issues"
  },
  "homepage": "https://github.com/naaa-G/react-responsive-easy#readme"
}
