{
  "name": "@yaseratiar/react-responsive-easy-postcss-plugin",
  "version": "1.0.0",
  "description": "PostCSS plugin for React Responsive Easy CSS processing",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rimraf dist"
  },
  "keywords": [
    "postcss",
    "postcss-plugin",
    "responsive",
    "css",
    "react",
    "build-time",
    "custom-media",
    "css-variables"
  ],
  "author": "naa-G",
  "license": "MIT",
  "dependencies": {
    "postcss": "^8.4.0",
    "postcss-value-parser": "^4.2.0",
    "@react-responsive-easy/core": "workspace:*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.1.0",

    "@types/node": "^20.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naaa-G/react-responsive-easy.git",
    "directory": "packages/postcss-plugin"
  },
  "bugs": {
    "url": "https://github.com/naaa-G/react-responsive-easy/issues"
  },
  "homepage": "https://github.com/naaa-G/react-responsive-easy#readme"
}
